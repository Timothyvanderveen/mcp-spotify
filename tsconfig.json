{
    "compilerOptions": {
        "target": "ESNext",
        "module": "Node16",
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "~/*": ["./src/*"],
            "auth/*": ["./src/auth/*"],
            "server/*": ["./src/server/*"],
            "client/*": ["./src/client/*"]
        },
        "baseUrl": ".",
        "outDir": "./build",
        "rootDir": "./src"
    },
    "include": ["./src/server/index.ts", "./src/client/index.ts", "./src/scripts/*"],
    "exclude": ["node_modules"]
}
